<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Main Form View, Adapting to contact tags as well as user group -->
        <record id="view_form_contact_all" model="ir.ui.view">
            <field name="name">view_form_contact_all</field>
            <field name="priority" eval="0"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Partners">
                    <header>                    
                        <field name="stage" widget="statusbar"  options="{'clickable': '1'}"/>
                        <button name="add_new_adress" string="ADD NEW ADDRESS" type="object" icon="fa-legal" attrs="{'invisible': [('is_company', '=', True)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="1">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                        </div>
                        <div id="o_contact_container">
                            <div id="o_contact_main">
                                <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image_medium&quot;}"/>
                                <div class="oe_title">
                                    <field name="company_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                                    <h1>
                                        <field name="name" attrs="{
                                                'readonly': [('is_company', '=', False)],
                                                'required': [('is_company', '=', True)]
                                                }" placeholder="Company Name"/>
                                    </h1>
                                    <div class="o_row oe_edit_only" attrs="{'invisible': [('is_company', '=', True)]}">
                                            <field name="firstname" attrs=
                                                "{'required': [('lastname', '=', False),
                                                ('is_company', '=', False),
                                                ('type', '=', 'contact')]}" placeholder="Firstname"/>
                                            <field name="lastname2" placeholder="Middlename"/>
                                            <field name="lastname" attrs=
                                                "{'required': [('firstname', '=', False),
                                                ('is_company', '=', False),
                                                ('type', '=', 'contact')]}" placeholder="Lastname"/>
                                            

                                    </div>
                                </div>
                                <field name="category_id" string='' widget="many2many_tags" required="True" options="{'no_create_edit': True}" placeholder="Client, Supplier, etc."/>
                                <!-- <field name="sharepoint_folder" widget="url" readonly="1" text="|   Open Document Folder" string='' attrs="{'invisible': [('create_folder', '=', False)]}"/> -->
                                <field name="sp_folder" widget ="url" style='font-size:medium' text="|   Open Sharepoint Folder"/>
                                <br/>
                                <button type="object" class = 'btn btn-primary' name="create_sp_folder" string="Create SharePoint Folder" attrs="{'invisible': ['|','|','|', ('sp_folder', '!=', False),('is_company', '=', False), ('altname', '=', False),('customer', '=', False)]}"/>
                                <separator string="   "/>

                                <group attrs="{'invisible': [('is_company', '=', True)]}">
                                    <group>
                                        <field name="title" attrs="{'required': [('is_company', '=', False)]}"/>
                                        <field name="email" widget="email" attrs="{'required': [('is_company', '=', False)],'invisible': [('is_company', '=', True)]}"/>
                                        <field name="hidden" string="Is Private?" groups="vcls-contact.vcls_group_ceo"/>
                                    </group>
                                    <group>
                                        <field name="function" attrs="{'required': [('is_company', '=', False)]}"/>
                                        <field name="parent_id" widget="res_partner_many2one" placeholder="Company" domain="[('is_company', '=', True)]" attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
                                    </group>
                                </group>

                                <group attrs="{'invisible': [('is_company', '=', False)]}">
                                    <group string=" ">
                                        <field name="hidden" string="Is Private?" groups="vcls-contact.vcls_group_ceo"/>
                                        <field name="company_group_id" attrs="{'invisible': [('is_company', '=', False)]}"/>
                                        <field name="altname" attrs="{'invisible': [('see_segmentation', '=', False)]}"/>
                                        <!--<field name="currency_id" attrs="{'invisible': [('see_segmentation', '=', False)]}"/>-->
                                        <!-- <field name="create_folder" invisible="0"/> -->
                                    </group>
                                    <group string="Internal Contacts">
                                        <field name="user_id" string="Account Manager"/>
                                        <field name="expert_id" invisible = '1'/>
                                        <field name="assistant_id" attrs="{'invisible': [('see_segmentation', '=', False)]}"/>
                                        <field name="controller_id" attrs="{'invisible': [('see_segmentation', '=', False)]}"/>
                                        <field name="invoice_admin_id" attrs="{'invisible': [('see_segmentation', '=', False)]}"/>
                                        <field name="vcls_contact_id" attrs="{'invisible': [('see_segmentation', '=', False)]}"/> 
                                    </group>
                                </group>

                                <separator string="   "/>
                                <field name="completion_ratio" widget="percentpie" invisible='1'/>

                                
                            </div>
                            </div>
                                <!-- Invisible Fields used -->
                                <field name="is_company" invisible="1"/>
                                <field name="supplier" invisible="1"/>
                                <field name="customer" invisible="1"/>                
                                <field name="company_name" invisible="1"/>              
                                <field name="lang" invisible="1"/>                               
                                <field name="see_segmentation" invisible="1"/>
                                <field name="see_supplier" invisible="1"/>
                            <notebook>
                            <page name="contact" string="Communication &amp; Address">
                                <group>
                                    <group>
                                        <field name="type" attrs="{'invisible': [('is_company', '=', True)]}"/>
                                        <field name="email" widget="email"/>    
                                        <field name="phone" widget="phone"/>
                                        <field name="mobile" widget="phone"/>
                                        <field name="fax" widget="phone"/>
                                        <field name="website" widget="url"/>
                                        <field name="linkedin" widget="url"/>
                                    </group>
                                    <group>
                                        <label for="street" string="Address"/>
                                        <div>
                                            <div class="o_address_format" name="div_address">
                                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                <field name="city" placeholder="City" class="o_address_city"/>
                                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                            </div>
                                        </div>   
                                    </group>
                                </group>
                                </page>
                                <!--  related contact (reuse existing one) -->
                                <page name="individuals" string="Individuals" attrs="{'invisible': [('is_company', '=', False)]}">
                                    <field name="child_ids" mode="kanban">
                                        <kanban>
                                            <field name="id"/>
                                            <field name="color"/>
                                            <field name="name"/>
                                            <field name="title"/>
                                            <field name="type"/>
                                            <field name="email"/>
                                            <field name="parent_id"/>
                                            <field name="is_company"/>
                                            <field name="function"/>
                                            <field name="phone"/>
                                            <field name="street"/>
                                            <field name="street2"/>
                                            <field name="zip"/>
                                            <field name="city"/>
                                            <field name="country_id"/>
                                            <field name="mobile"/>
                                            <field name="state_id"/>
                                            <field name="image_small"/>
                                            <field name="lang"/>
                                            <!-- fields in form x2many view to diminish requests -->
                                            <field name="comment"/>
                                            <field name="customer"/>
                                            <field name="display_name"/>
                                            <field name="supplier"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                                    <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                        <div class="o_kanban_image">
                                                            <img alt="" t-if="record.image_small.raw_value" t-att-src="kanban_image('res.partner', 'image_small', record.id.raw_value)"/>
                                                            <t t-if="!record.image_small.raw_value">
                                                                <img alt="Delivery" t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/img/truck.png"'/>
                                                                <img alt="Invoice" t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/img/money.png"'/>
                                                                <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                                    <img alt="Logo" t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/img/company_image.png"'/>
                                                                    <img alt="Avatar" t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/img/avatar.png"'/>
                                                                </t>
                                                            </t>
                                                        </div>
                                                        <div class="oe_kanban_details">
                                                            <field name="name"/>
                                                            <div t-if="record.function.raw_value"><field name="function"/></div>
                                                            <div t-if="record.email.raw_value"><field name="email" widget="email"/></div>
                                                            <div t-if="record.type.raw_value != 'contact'">
                                                                <div>
                                                                    <field name="zip"/>
                                                                    <field name="city"/>
                                                                </div>
                                                                <field t-if="record.state_id.raw_value" name="state_id"/>
                                                                <field name="country_id"/>
                                                            </div>
                                                            <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                                                            <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>

                                </page>
  

                                <page name="description" string="Description">
                                    <field name="description"/>
                                </page>

                                <page name="segmentation" string="Business Segmentation" attrs="{'invisible': [('see_segmentation', '=', False),('see_supplier', '=', False)]}">
                                    <group>
                                        <group>
                                            <field name="country_group_id"/>
                                            <field name="industry_id"/>
                                        </group>
                                        <group>
                                            <field name="client_activity_ids" widget="many2many_tags"/>
                                            <field name="client_product_ids" widget="many2many_tags"/>
                                        </group>
                                    </group>
                                </page>

                                <page name="financials" string="Financials" attrs="{'invisible': [('see_segmentation', '=', False)]}">
                                   <group>
                                        <group>
                                            <field name="property_product_pricelist" string="Trading Pricelist"/>
                                            <!--<field name="legacy_analytical_account_id" readonly="1"/>-->
                                        </group>
                                        <group>
                                            <field name="client_status"/>
                                        </group>
                                    </group> 
                                </page>

                                <!--  related contact (reuse existing one) -->
                                <page name="other_adresses" string="Other Addresses" attrs="{'invisible': [('is_company', '=', True)]}">
                                    <field name="child_ids" mode="kanban">
                                        <kanban>
                                            <field name="id"/>
                                            <field name="color"/>
                                            <field name="name"/>
                                            <field name="title"/>
                                            <field name="type"/>
                                            <field name="email"/>
                                            <field name="parent_id"/>
                                            <field name="is_company"/>
                                            <field name="function"/>
                                            <field name="phone"/>
                                            <field name="street"/>
                                            <field name="street2"/>
                                            <field name="zip"/>
                                            <field name="city"/>
                                            <field name="country_id"/>
                                            <field name="mobile"/>
                                            <field name="state_id"/>
                                            <field name="image_small"/>
                                            <field name="lang"/>
                                            <!-- fields in form x2many view to diminish requests -->
                                            <field name="comment"/>
                                            <field name="customer"/>
                                            <field name="display_name"/>
                                            <field name="supplier"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                                    <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                        <div class="o_kanban_image">
                                                            <img alt="" t-if="record.image_small.raw_value" t-att-src="kanban_image('res.partner', 'image_small', record.id.raw_value)"/>
                                                            <t t-if="!record.image_small.raw_value">
                                                                <img alt="Delivery" t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/img/truck.png"'/>
                                                                <img alt="Invoice" t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/img/money.png"'/>
                                                                <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                                    <img alt="Logo" t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/img/company_image.png"'/>
                                                                    <img alt="Avatar" t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/img/avatar.png"'/>
                                                                </t>
                                                            </t>
                                                        </div>
                                                        <div class="oe_kanban_details">
                                                            <field name="name"/>
                                                            <div t-if="record.function.raw_value"><field name="function"/></div>
                                                            <div t-if="record.email.raw_value"><field name="email" widget="email"/></div>
                                                            <div t-if="record.type.raw_value != 'contact'">
                                                                <div>
                                                                    <field name="zip"/>
                                                                    <field name="city"/>
                                                                </div>
                                                                <field t-if="record.state_id.raw_value" name="state_id"/>
                                                                <field name="country_id"/>
                                                            </div>
                                                            <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                                                            <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>

                                </page>
                            </notebook>       

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>    

        <!-- Main Form View, Adapting to add new adress -->
        <record id="view_form_contact_address" model="ir.ui.view">
            <field name="name">view_form_contact_adress</field>
            <field name="priority" eval="300"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Partners">
                    <sheet>
                        <group>
                            <group>
                                <field name="parent_id" widget="res_partner_many2one" string="Parent Contact" readonly="1"/>
                            </group>
                            <group>
                                <field name="category_id" string='Tags' widget="many2many_tags" required="True" options="{'no_create_edit': True}" placeholder="Client, Supplier, etc."/>
                            </group>
                        </group>
                       
                        <group>
                            <group>
                                <field name="email" widget="email"/>    
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="fax" widget="phone"/>
                                <field name="website" widget="url"/>
                                <field name="linkedin" widget="url"/>
                            </group>
                            <group>
                                <field name="type" string="Type"/>
                                <label for="street" string="Address"/>
                                <div>
                                    <div class="o_address_format" name="div_address">
                                        <field name="street" placeholder="Street..."/>
                                        <field name="street2" placeholder="Street 2..."/>
                                        <field name="city" placeholder="City"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                                        <field name="zip" placeholder="ZIP"/>
                                        <field name="country_id" placeholder="Country" options='{"no_open": True, "no_create": True}'/>
                                    </div>
                                </div>   
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>  

        <!-- OVERRIDE of the default search view to suppress some -->
        <record id="view_res_partner_filter_" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml"> 
                <!-- SEARCH FIELDS -->
                <field name="parent_id" position="after">
                    <field name="industry_id" string="Client Industry" filter_domain="[('industry_id','ilike', self)]"/>
                    <field name="client_activity_ids" string="Client Activities" filter_domain="[('client_activity_ids','ilike', self)]"/>
                    <field name="client_product_ids" string="Client Products" filter_domain="[('client_product_ids','ilike', self)]"/>
                </field>

                <field name="user_id" position="replace">
                    <field name="user_id" string="Account Manager"/>
                </field>
            
                <!-- FILTERS -->
                <filter name="filter_my_partners" position="replace">
                    <filter name="filter_my_partners" help="My Contacts" domain="['|',('user_id','=',uid),'|',('expert_id','=',uid),'|',('assistant_id','=',uid),'|',('controller_id','=',uid),('invoice_admin_id','=',uid)]"/>
                </filter>
                <filter name="customer" position="replace">
                    <filter string="Clients" name="customer" domain="[('customer','=',True)]"/>
                </filter>
                <filter name="supplier" position="replace">
                    <filter string="Suppliers" name="supplier" domain="[('supplier','=',True)]"/>
                </filter>

                <!-- GROUP BY -->
                <group name="group_by" position="replace">
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="salesperson" string="Account Manager" domain="[]" context="{'group_by' : 'user_id'}"/>
                        <filter name="group_country" string="Country" context="{'group_by': 'country_id'}"/>
                        <filter name="group_industry" string="Industry" context="{'group_by': 'industry_id'}"/>
                        <filter name="group_company" string="Company" context="{'group_by': 'parent_id'}"/>
                    </group>
                </group>
                
            </field>
        </record>


        <!-- Add Account Manager in partner kanban view -->
        <record id="res_partner_kanban_view" model="ir.ui.view">
            <field name="name">res.partner.kanban.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <field name="mobile" position="before">
                    <field name="company_type"/>
                </field>
                <xpath expr="//div[hasclass('oe_kanban_partner_links')]" position="before">
                    <div t-if="record.user_id.raw_value and record.company_type.raw_value == 'company'">
                        <span class="fa fa-user-circle" aria-label="Account Manager" title="Account Manager"/>
                        <field name="user_id"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- VCLS Offices KANBAN View -->
        <record id="view_kanban_vcls_office" model="ir.ui.view">
        <field name="name">res.partner.vclsoffice.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="fax"/>
                    <field name="title"/>
                    <field name="email"/>
                    <field name="is_company"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="mobile"/>
                    <field name="state_id"/>
                    <field name="image_small"/>
                    <field name="type"/>
                    <templates>
                        <t t-name="kanban-box">
                            <!-- PICTURE -->
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <t t-if="record.image_small.raw_value &amp;&amp; !record.is_company.raw_value">
                                    <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_medium', record.id.raw_value)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_small', record.parent_id.raw_value)"/>
                                    </div>
                                    <div class="o_kanban_image rounded-circle d-md-none" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_small', record.id.raw_value)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_small', record.parent_id.raw_value)"/>
                                    </div>
                                </t>
                                <t t-elif="record.is_company.raw_value">
                                    <img class="o_kanban_image" t-att-src="kanban_image('res.partner', 'image_small', record.id.raw_value)" t-att-alt="record.display_name"/>
                                </t>
                                <!-- INFO -->
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name"/></strong>
                                    <div>
                                        <ul>
                                            <li><span class="fa fa-map-marker" aria-label="Address" title="Address"/>   <field name="street"/></li>
                                            <li t-if="record.street2.raw_value"><field name="street2"/></li>
                                            <li t-if="record.city.raw_value or record.state_id.raw_value or record.zip.raw_value"><field name="city"/>, <field name="state_id"/> <field name="zip"/></li>
                                        </ul>
                                    </div>
                                    <div>
                                        <span class="fa fa-phone" aria-label="Phone" title="Phone"/>
                                        <field name="phone" />
                                    </div>
                                    <div>
                                        <span class="fa fa-fax" aria-label="Fax" title="Fax"/>
                                        <field name="fax" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
        </field>
    </record>

        <!-- used to visualize all externals -->
        <record model="ir.actions.act_window" id="action_contact_all_externals">
            <field name="name">All External Contacts</field>
            <field name="domain" eval="[('is_internal','=',False),('stage','in',[2,3,4])]"/>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity</field>
        </record>

        <!-- used to visualize All Contacts -->
        <record model="ir.actions.act_window" id="action_all_contacts">
            <field name="name">All</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('base.res_partner_kanban_view')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('base.view_partner_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_contact_all')}),
            ]"/>
        </record>

        <!-- used to visualize VCLS Entities -->
        <record model="ir.actions.act_window" id="action_vcls_entities">
            <field name="name">VCLS Entities</field>
            <field name="domain" eval="[('is_company','=',True),('is_internal','=',True),('stage','in',[2,3,4])]"/>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity</field>
        </record>

        <!-- used to visualize VCLS Offices-->
        <record model="ir.actions.act_window" id="action_vcls_offices">
            <field name="name">VCLS Offices</field>
